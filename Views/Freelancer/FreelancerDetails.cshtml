@model WorkHive.Models.Freelancer
@{
    Layout = "_navbar";
}

<div class="freelancer-profile container mt-5 mb-5 p-4 bg-white rounded shadow">
    <!-- Profile Picture -->
    <div class="text-center mb-4">
        <img src="@Model.ProfilePic" alt="Profile Picture" class="profile-pic rounded-circle mb-3" />
        <h2 class="text-dark-green fw-bold">@Model.Name</h2>
        <p class="text-muted">@Model.Description ?? "No description provided."</p>
    </div>

    <hr class="section-divider" />

    <!-- Skills -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Skills</h5>
        <div class="d-flex flex-wrap gap-2">
            @if (Model.skills.Any())
            {
                @foreach (var skill in Model.skills)
                {
                    <span class="badge skill-badge">@skill.skill_name</span>
                }
            }
            else
            {
                <p class="text-muted">No skills listed.</p>
            }
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Language -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Language Proficiency</h5>
        <p class="text-dark">@Model.Language - <span class="text-muted">@Model.LanguageLevel ?? "Not specified"</span></p>
    </div>

    <hr class="section-divider" />

    <!-- Portfolio -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Portfolio</h5>
        @if (!string.IsNullOrEmpty(Model.PortfolioLink))
        {
            <a href="@Model.PortfolioLink" target="_blank" class="btn btn-outline-primary">View Portfolio</a>
        }
        else
        {
            <p class="text-muted">No portfolio link provided.</p>
        }
    </div>

    <hr class="section-divider" />

    <!-- Contact Information -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Contact</h5>
        @if (!string.IsNullOrEmpty(Model.Phone))
        {
            <p class="text-dark">Phone: <span class="text-muted">@Model.Phone</span></p>
        }
        else
        {
            <p class="text-muted">No contact information provided.</p>
        }
    </div>
</div>

<style>
    /* General Styling */
    body {
        background-color: #f7f8fa;
        font-family: 'Arial', sans-serif;
    }

    .freelancer-profile {
        max-width: 800px;
        margin: auto;
    }

    .section-divider {
        border: none;
        height: 1px;
        background-color: #e0e0e0;
        margin: 20px 0;
    }

    /* Profile Picture */
    .profile-pic {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border: 4px solid #e0e0e0;
    }

    /* Typography */
    .text-dark-green {
        color: #1e5631;
    }

    .fw-bold {
        font-weight: bold;
    }

    /* Skills Badges */
    .skill-badge {
        background-color: #f5f5f5;
        color: #3b6c3b;
        font-size: 0.85rem;
        padding: 0.3rem 0.6rem;
        border-radius: 20px;
        font-weight: 500;
    }

    /* Portfolio Button */
    .btn-outline-primary {
        color: #1e5631;
        border: 2px solid #1e5631;
        border-radius: 25px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        transition: all 0.3s ease-in-out;
    }

    .btn-outline-primary:hover {
        background-color: #1e5631;
        color: white;
    }
</style>
