 @model List<WorkHive.Models.Job>
@{
    Layout = "_LayoutClient";
}
<div class="container mt-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-4">
        <h1 class="display-4">Your Posted Jobs</h1>
        <p class="lead">Track the jobs you've posted.</p>
    </div>

    <!-- Jobs Posted Section -->
    <section class="mb-5">
       @*  <h2 class="h4 mb-3">Posted Jobs</h2> *@
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Job ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Budget</th>
                    <th>Status</th>
                    <th>Posted At</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.job_id</td>
                            <td>@job.title</td>
                            <td>@job.description</td>
                            <td>@job.budget?.ToString("C")</td>
                            <td>@job.status</td>
                            <td>@job.PostedAt.ToString("MMMM dd, yyyy - h:mm tt")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No jobs posted yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>

