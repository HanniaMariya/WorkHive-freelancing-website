@model IEnumerable<WorkHive.Models.Job>
@{
    Layout = "_navbar";
}


<div class="page-container py-2">

    <!-- Header Section -->
    <header class="text-center mb-5">
        <h1 class="page-title fw-bold">Find the Perfect Job</h1>
        <p class="text-muted mb-4">Browse from a wide range of categories and apply to jobs that match your skills.</p>
    </header>

    <!-- Services Section -->
    <section class="services-section mb-5">
        <h2 class="section-title fw-bold mb-4 text-center">Popular Categories</h2>
        <div class="service-cards-container d-flex justify-content-center gap-4 flex-wrap">
            @foreach (var service in new string[]
            {
                "Web Development", "Graphic Design", "Content Writing", "SEO",
                "Digital Marketing", "App Development",
                "Writing & Translation", "Video Editing","Cyber Security", "AI Services"
            })
            {
                <div class="service-card text-center p-4 shadow-sm rounded">
                    <div class="icon-container mb-2">
                        @if (service == "Web Development")
                        {
                            <i class="fas fa-laptop-code fa-2x text-success"></i>
                        }
                        @if (service == "Graphic Design")
                        {
                        <i class="fas fa-paint-brush fa-2x text-success"></i>
                        }
                        @if (service == "Content Writing")
                        {
                        <i class="fas fa-pen fa-2x text-success"></i>
                        }
                        @if (service == "SEO")
                        {
                        <i class="fas fa-search fa-2x text-success"></i>
                        }
                        @if (service == "Digital Marketing")
                        {
                        <i class="fas fa-bullhorn fa-2x text-success"></i>
                        }
                        @if (service == "App Development")
                        {
                        <i class="fas fa-mobile-alt fa-2x text-success"></i>
                        }
                        @if (service == "Writing & Translation")
                        {
                        <i class="fas fa-language fa-2x text-success"></i>
                        }
                        @if (service == "Video Editing")
                        {
                            <i class="fas fa-video fa-2x text-success"></i>
                        } 
                        @if (service == "Cyber Security")
                        {
                            <i class="fas fa-shield-alt fa-2x text-success"></i>
                        }
                        @if (service == "AI Services")
                        {
                        <i class="fas fa-brain fa-2x text-success"></i>
                        }
                    </div>
                    <p class="service-name fw-bold text-success">@service</p>
                </div>
            }
        </div>
    </section>

    <!-- Search and Filter Section -->
   @*  <section class="search-filter-section mb-5">
        <div class="card shadow-sm p-4"> *@

           @*  <h3 class="section-title text-success fw-bold mb-3 text-center">Filter Jobs</h3> *@
            <form method="get" action="/Job/SearchJobs" class="row g-3 justify-content-center">
              @*   <div class="col-md-3">
                    <input type="number" name="budget" class="form-control form-control-lg" placeholder="Filter by budget" />
                </div> *@
                <div class="col-md-3">
                    <select name="skills" class="form-select form-select-lg" multiple>
                        <option value="Web Development">Web Development</option>
                        <option value="Graphic Design">Graphic Design</option>
                        <option value="Content Writing">Content Writing</option>
                        <option value="SEO">SEO</option>
                        <option value="Digital Marketing">Digital Marketing</option>
                        <option value="App Development">App Development</option>
                        <option value="Cyber Security">Cyber Security</option>
                        <option value="Writing & Translation">Writing & Translation</option>
                        <option value="Video Editing">Video Editing</option>
                        <option value="AI Services">AI Services</option>
                        <option value="Data Analysis">Data Analysis</option>
                    </select>
                   
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-70 py-3">Apply Filter</button>
                </div>
            </form>

        @* </div>
    </section> *@

    <!-- Jobs List Section -->
    <section class="jobs-list-section">
        <h3 class="section-title text-success fw-bold m-4 text-center">Available Jobs</h3>
        @await Html.PartialAsync("_JobsList", Model)
    </section>

</div>

<style>
    /* General Styling */

    .page-container {

        max-width: 1200px;
        margin: auto;
        font-family: Arial, sans-serif;
    }

    .page-title {
        color: #006644;
        font-size: 3rem;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .section-title {
        color: #006644;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

