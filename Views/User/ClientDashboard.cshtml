
 @model List<WorkHive.Models.Job>
@{
    Layout = "_LayoutClient";
}
<div class="container mt-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-4">
        <h1 class="display-4 ">Your Posted Jobs</h1>
        <p class="lead">Track the jobs you've posted.</p>
    </div>

    <!-- Jobs Posted Section -->
    <section class="mb-5">
       @*  <h2 class="h4 mb-3">Posted Jobs</h2> *@
        <table class="table table-striped table-bordered">
            <thead class="bg-success">
                <tr>
                   
                    <th>Title</th>
                    <th>Description</th>
                    <th>Budget</th>
                    <th>Status</th>
                    <th>Posted At</th>
                    <th>Applications</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.title</td>
                            <td>@job.description</td>
                            <td>@job.budget?.ToString("C")</td>
                            <td>@job.status</td>
                            <td>@job.PostedAt.ToString("MMMM dd, yyyy - h:mm tt")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("ViewApplicationsForJob", "Application", new { jobId = job.job_id})" class="btn btn-sm text-success">View Applications</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No jobs posted yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>

<style>
  thead{
      color:white;
  }
  .btn-group:hover
  {
      color:darkgreen;
      text-decoration:underline;
  } 
  
</style>