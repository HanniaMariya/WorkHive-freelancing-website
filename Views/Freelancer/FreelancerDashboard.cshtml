
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Freelancer Dashboard";
    var applications = ViewBag.Model1 as List<WorkHive.Models.ViewModels.ApplicationDetails>;
    var jobs = ViewBag.Model2 as List<WorkHive.Models.Job>;
}

<div class="container mt-4">
    <!-- Dashboard Header -->
    <div class="text-center mb-4">
        <h1 class="display-4">Freelancer Dashboard</h1>
        <p class="lead">Manage your applications and explore recommended jobs.</p>
    </div>

    <div class="row">
        <!-- Applications Section -->
        <div class="col-lg-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Your Applications</h4>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_ApplicationsList", applications)
                </div>
            </div>
        </div>

        <!-- Job Recommendations Section -->
        <div class="col-lg-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Recommended Jobs</h4>
                </div>
                <div class="card-body">
                    @if (jobs != null && jobs.Count > 0)
                    {
                        @await Html.PartialAsync("_JobsList", jobs)
                    }
                    else
                    {
                        <p class="text-muted">No job recommendations available at the moment.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .btn-group .btn:last-child {
        margin-right: 0;
    }

</style>
