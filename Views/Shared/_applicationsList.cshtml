@model List<WorkHive.Models.ViewModels.ApplicationDetails>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead class="thead-light">
            <tr>
                <th>Application ID</th>
                <th>Job Title</th>
                <th>Proposal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.application.app_id</td>
                    <td>@app.Job.title</td>
                    <td>@app.application.proposal</td>
                   
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/Applications/Update/@app.application.app_id" class="btn btn-sm btn-warning">Update</a>
                            <a href="/Applications/Delete/@app.application.app_id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">You have not applied for any jobs yet.</p>
}
