@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freelancer Website</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/Style.css" />
  

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #1dbf73;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-size: 1.1rem;
        }

        .navbar-nav .nav-link:hover {
            background-color: #0f7f59;
            border-radius: 5px;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
        }

        .nav-buttons .btn {
            margin-left: 15px;
        }

        .carousel-caption {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.6);
            color: white;
            padding: 20px;
            width: 60%;
            max-height: 150px;
            border-radius: 10px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

            .carousel-caption h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }
      

        /* Search Bar Over the Image */
        .search-bar {
            display: flex;
            justify-content: center;
            align-items: center;
           /* Center vertically within the viewport */
            width: 100%; /* Full width */
        }

            .search-bar input {
                width: auto; /* Wider input for larger appearance */
                padding: 15px; /* Increased padding for larger input */
                border-radius: 20px; /* Rounded borders */
                border: 2px solid #ccc; /* Subtle border */
                font-size: 1.2rem; /* Larger font size */
                outline: none; /* Remove default outline */
                transition: border-color 0.3s, box-shadow 0.3s; /* Smooth transition effects */
            }

                .search-bar input:focus {
                    border-color: #1dbf73; /* Highlight border on focus */
                    box-shadow: 0 0 8px rgba(29, 191, 115, 0.5); /* Glow effect */
                }

            .search-bar button {
                padding: 15px 30px; /* Increased padding for larger button */
                background-color: #1dbf73; /* Main button color */
                color: white;
                border: none;
                border-radius: 20px; /* Rounded borders */
                font-size: 1.2rem; /* Larger font size */
                margin-left: 15px; /* Spacing between input and button */
                cursor: pointer;
                transition: background-color 0.3s, transform 0.2s; /* Smooth hover effect */
            }

                .search-bar button:hover {
                    background-color: #0f7f59; /* Darker shade on hover */
                    transform: scale(1.05); /* Slight zoom effect on hover */
                }


        .description {
            margin-top:5px;
        background-color: #f8f9fa;
        padding: 40px 20px;
        text-align: center;
    }

    .description-heading {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
    }

    .description-content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 30px;
    }

    .description-item {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 30%;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .description-subheading {
        font-size: 1.5rem;
        color: #1dbf73;
        margin-bottom: 15px;
    }

    .description-text {
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
    }
        /* Service Card Icon Style */
        .service-icon {  
            font-size: 3rem;
            color: #1dbf73;
            margin-bottom: 15px;
        }

        /* Services Section */
        .services {
            
            padding: 40px 20px;
            background: #fff;
            text-align: center;
        }
        .services-heading 
        {
            font-weight:bold;
        }

            .services h2 {
                margin-bottom: 20px;
            }

        .service-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            width: 250px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }

            .card:hover {
                transform: translateY(-5px); 
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); 
            }

            .card h3 {
                margin-top: 10px;
                font-size: 1.4rem;
            }

            .card p {
                font-size: 1rem;
                color: #555;
            }

        /* Footer */
        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
            margin-top: 20px;
        }

       

    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand" href="#">WorkHive</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About","Home")">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewJobs", "Job")">Find Work</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewFreelancers", "Freelancer")">Find Freelancers</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Services
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Web Development</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Graphic Design</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Content Writing</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">SEO Optimization</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Video Editing</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Writing & Translation</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Cybersecurity</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Digital Marketing</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">AI Services</a>
                        <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer")">Data Analysis</a>
                    </div>
                </li>
            </ul>

            <div class="ml-auto nav-buttons">
               
                <button class="btn btn-success" onclick="location.href='/freelancer/createFreelancer';">Join as Freelancer</button>
                <button class="btn btn-primary" onclick="location.href='/job/postJob';">Post a Job</button>
                <button class="btn btn-outline-success" onclick="location.href='/user/login';">Login</button>
                <button class="btn btn-outline-success" onclick="location.href='/user/register';">Sign Up</button>
            </div>
        </div>
    </nav>

    <div id="interiorCarousel" class="carousel slide mb-5" data-bs-ride="carousel">

        <!-- Inner Carousel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/a-person-working-from-home-on-a-laptop-in-a-cozy-vibrant-space-filled-with-plants-books-and-colorful-decor-creating-a-warm-and-productive-atmosphere-free-photo.jpg"
                     class="d-block w-100 carousel-image" alt="Freelancer Services">
                <div class="carousel-caption">
                    <h1 class="display-5 fw-bold text-light text-shadow">WORK FROM THE COMFORT OF YOUR HOME</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/online-financial-transactions-and-payment-successful-closeup-of-hand-using-a-laptop-for-online-banking-login-to-pay-online-photo.jpg"
                     class="d-block w-100 carousel-image" alt="Financial Transactions">
                <div class="carousel-caption">
                    <h1 class="display-6 fw-bold text-light text-shadow">MAKE SECURE PAYMENT TRANSACTIONS</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/meeting.jpg"
                     class="d-block w-100 carousel-image" alt="Meeting">
                <div class="carousel-caption">
                    <h1 class="display-6 fw-bold text-light text-shadow">EASY INTERACTION AMONG CLIENTS AND FREELANCERS</h1>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#interiorCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#interiorCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#interiorCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#interiorCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#interiorCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

    

    <!-- Search Bar over the image -->
    <h2 class="mt-5 text-center description-heading">Search for Services to find talent</h2>
    <div class="search-bar">
       
        <form class="m-auto" method="get" action="/Freelancer/SearchFreelancers">
            <input type="text" name="searchQuery" placeholder="Search a service" aria-label="Search Services" />
            <button type="submit">Search</button>
        </form>
    </div>

    <!---description--->
    <section class="description">
        <div class="container">
            <h2 class="description-heading">Why WorkHive?</h2>
            <div class="description-content">
                <div class="description-item">
                    <h3 class="description-subheading">For Clients</h3>
                    <p class="description-text">Easily find talented freelancers for all your business needs. WorkHive connects you with top experts, ensuring your projects are completed on time and to the highest standards.</p>
                </div>
                <div class="description-item">
                    <h3 class="description-subheading">For Freelancers</h3>
                    <p class="description-text">Showcase your skills and find amazing freelance opportunities. With a user-friendly platform and direct access to clients, you can easily manage your projects and grow your career.</p>
                </div>
                <div class="description-item">
                    <h3 class="description-subheading">How We Help</h3>
                    <p class="description-text">WorkHive makes it simple for both clients and freelancers to connect. With a seamless job posting and application process, you'll experience a hassle-free environment designed to foster collaboration and ensure success.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Section -->
    <section class="services">
        <div class="container">
            <h2 class="services-heading">Explore Services Available</h2>
            <div class="service-cards">

                    @* <a href="/Job/SearchJobs/"Web Development"" style="text-decoration: none;"> *@
                 <div class="card">
                    <i class="fas fa-laptop-code service-icon"></i>
                    <h3>Web Development</h3>
                    <p>Create stunning websites tailored to your needs.</p>
                 </div>
                

                <div class="card">
                    <i class="fas fa-paint-brush service-icon"></i>
                    <h3>Graphic Design</h3>
                    <p>Eye-catching designs for your brand.</p>
                </div>
               
                <div class="card">
                    <i class="fas fa-pencil-alt service-icon"></i>
                    <h3>Content Writing</h3>
                    <p>Engaging and SEO-optimized content.</p>
                </div>
         

                        
                <div class="card">
                    <i class="fas fa-bullhorn service-icon"></i>
                    <h3>Digital Marketing</h3>
                    <p>Boost your online presence effectively.</p>
                </div>
         
             
                    <div class="card">
                        <i class="fas fa-pen-nib service-icon"></i>
                        <h3>Writing & Translation</h3>
                        <p>Deliver compelling content and accurate translations.</p>
                    </div>
           
                <!-- Video Editing -->
              
                    <div class="card">
                        <i class="fas fa-video service-icon"></i>
                        <h3>Video Editing</h3>
                        <p>Transform raw footage into captivating stories.</p>
                    </div>
            
                <!-- SEO Optimization -->
          
                    <div class="card">
                        <i class="fas fa-search service-icon"></i>
                        <h3>SEO Optimization</h3>
                        <p>Boost your visibility and drive organic traffic.</p>
                    </div>
           
                <!-- Cybersecurity -->
               
                    <div class="card">
                        <i class="fas fa-shield-alt service-icon"></i>
                        <h3>Cybersecurity</h3>
                        <p>Secure your data and protect your online presence.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 WorkHive. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
