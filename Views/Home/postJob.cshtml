@model WorkHive.Models.Job
@{
    Layout = null;
    ViewBag.Title = "Post a Job";
}
<h1 class="job-header">WorkHive</h1>
<h2 class="job-subheader">Let us know about the job you're posting</h2>
<div class="job-container">
   

    <form method="post" action="/Home/PostJob" class="job-form">
        
        <label for="Title" class="job-label">Job Title:</label>
        <input type="text" name="title" id="Title" class="job-input" required />
        
        <label for="Description" class="job-label">Job Description:</label>
        <textarea name="Description" id="description" class="job-input" rows="4" required></textarea>
        
        <label for="Budget" class="job-label">Budget:</label>
        <input type="number" name="budget" id="Budget" class="job-input" step="0.01" required />
        
        <label for="Skills" class="job-label">Skills Required:</label>
        <select name="Skills" id="Skills" class="job-input" multiple required>
            <option value="Web Development">Web Development</option>
            <option value="Graphic Design">Graphic Design</option>
            <option value="Content Writing">Content Writing</option>
            <option value="SEO">SEO</option>
            <option value="Digital Marketing">Digital Marketing</option>
            <option value="App Development">App Development</option>
        </select>
        <small class="helper-text">Hold 'Ctrl' (or 'Cmd' on Mac) to select multiple skills</small>
        
        <button type="submit" class="job-button">Post Job</button>
    </form>

    <p class="text-danger">@ViewBag.Error</p>
    <p class="text-success">@ViewBag.Success</p>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: darkseagreen;
        margin: 0;
        padding: 0;
    }

    .job-container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color:white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .job-header {
        font-size: 2.5rem;
        font-weight: bold;
        color: #111;
        text-align: center;
        margin: 20px;
    }

    .job-subheader {
        font-size: 1.5rem;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .job-form {
       
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .job-label {
        
        font-size: 1rem;
        color: black;
        margin-bottom: 8px;
    }

    .job-input {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-sizing: border-box;
    }

    .job-input:focus {
        outline: none;
        border-color: #1dbf73;
    }

    .helper-text {
        font-size: 0.9rem;
        color: #777;
        margin-bottom: 20px;
    }

    .job-button {
        padding: 10px;
        background-color: #1dbf73;
        border: none;
        border-radius: 4px;
        color: white;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .job-button:hover {
        background-color: #0f7f59;
    }

    .text-danger {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 10px;
    }

    .text-success {
        color: #2ecc71;
        font-size: 0.9rem;
        margin-top: 10px;
    }

  
    
</style>
