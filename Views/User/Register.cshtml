@{
    Layout = null;
    ViewBag.Title = "Register";
}

<div class="register-container">
    <h1 class="register-header">WorkHive</h1>
    <h2 class="register-subheader">Create a new account</h2>
    <div class="already">Already have an account? <a href="@Url.Action("Login")"> Login</a></div>

    <form method="post" action="/User/Register" class="register-form">
        <label for="name" class="register-label">Name:</label>
        <input type="text" name="name" id="name" class="register-input" required /><br />

        <label for="email" class="register-label">Email:</label>
        <input type="email" name="email" id="email" class="register-input" required /><br />

        <label for="password" class="register-label">Password:</label>
        <input type="password" name="password" id="password" class="register-input" required /><br />

        <label for="role" class="register-label">Role:</label>
        <select name="role" id="role" class="register-input" required>
            <option value="client">Client</option>
            <option value="freelancer">Freelancer</option>
        </select><br />

        <button type="submit" class="register-button">Register</button>
    </form>

    <p class="text-danger">@ViewBag.Error</p>
    <p class="text-success">@ViewBag.Success</p>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #004d33;
        display: flex;
        justify-content: center;
       /*  align-items: center; */
        height: 100vh;
        margin: 0;
    }

    .register-container {
        margin:auto 50px;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .register-header {
        font-size: 3rem;
        font-weight: bold;
        color: white;
        margin-bottom: 10px;
    }

    .register-subheader {
        font-size: 1.5rem;
        color: #b3e6cc;
        margin-bottom: 10px;
    }
    .already
    {
        color:white;
        margin-bottom: 30px;
    }
    a{
        color: #b3e6cc;
       
    }
    .register-form {
        background-color: #006644;
        padding: 30px;
        border-radius: 8px;
        text-align: left;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .register-label {
        font-size: 1rem;
        color: white;
        display: block;
        margin-bottom: 8px;
    }

    .register-input {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        margin-bottom: 20px;
        border-radius: 4px;
        border: 2px solid white;
    }

    .register-input:focus {
        outline: none;
        border-color: #004d33;
    }

    .register-button {
        width: 100%;
        padding: 10px;
        background-color: #1dbf73;
        border: none;
        border-radius: 4px;
        font-weight:bold;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .register-button:hover {
        background-color: #0f7f59;
    }

    .text-danger {
        color: #e74c3c;
        font-size: 0.9rem;
        margin-top: 10px;
    }

    .text-success {
        color: #2ecc71;
        font-size: 0.9rem;
        margin-top: 10px;
    }
</style>
