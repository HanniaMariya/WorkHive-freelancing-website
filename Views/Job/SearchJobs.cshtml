    .page-container {
        background-color: #f8f9fa;
        max-width: 1200px;
        margin: auto;
        font-family: Arial, sans-serif;
    }

    .page-title {
        color: #006644;
        font-size: 3rem;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .section-title {
        color: #006644;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .text-muted {
        font-size: 1rem;
    }

    .card {
        background-color: #f9f9f9;
        border: none;
       
    }

    .form-control,
    .form-select,
    .btn {
        border-radius: 5px;
    }

    .btn-success {
        background-color: #2d6a4f;
        border: none;
        transition: background-color 0.3s ease;
        font-weight: 600;
    }

    .btn-success:hover {
        background-color: #1b4332;
    }

    /* Jobs Section */
    .jobs-list-section {
        background-color: #f8f9fa;
        padding: 10px;
       /*  border-radius: 10px;
