<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/Style.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #1dbf73;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-size: 1.1rem;
        }

            .navbar-nav .nav-link:hover {
                background-color: #0f7f59;
                border-radius: 5px;
            }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
        }

        .nav-buttons .btn {
            margin-left: 15px;
        }

    </style>
    </head>
<body>
    <header>
    <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">WorkHive</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewJobs", "Job")">Find Work</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewFreelancers", "Freelancer")">Find Freelancers</a>
                    </li>
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Services
                    </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Web Development" })">Web Development</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Graphic Design" })">Graphic Design</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Content Writing" })">Content Writing</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "SEO" })">SEO Optimization</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Photography & Videography" })">Photography & Videography</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Video Editing" })">Video Editing</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Animation" })">Animation</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Writing & Translation" })">Writing & Translation</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Cyber Security" })">Cybersecurity</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Digital Marketing" })">Digital Marketing</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Social Media Management" })">Social Media Management</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "AI Engineering" })">AI Engineering</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Data Analysis" })">Data Analysis</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Programming & Tech" })">Programming & Tech</a>
                            <a class="dropdown-item" href="@Url.Action("SearchFreelancers", "Freelancer", new { searchQuery = "Financial Support" })">Financial Support</a>
                        </div>
                </li>
                </ul>

                <div class="ml-auto nav-buttons">

                    <button class="btn btn-success" onclick="location.href='/freelancer/createFreelancer';">Join as Freelancer</button>
                    <button class="btn btn-primary" onclick="location.href='/job/postJob';">Post a Job</button>
                    <button class="btn btn-outline-success" onclick="location.href='/user/login';">Login</button>
                    <button class="btn btn-outline-success" onclick="location.href='/user/register';">Sign Up</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section class="footer">
        @await Html.PartialAsync("_footer")
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/application.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
