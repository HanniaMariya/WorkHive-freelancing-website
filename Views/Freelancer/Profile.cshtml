@model WorkHive.Models.Freelancer

@{
    Layout = "_Layout2";
}

<div class="freelancer-profile mt-5 mx-auto p-4" style="max-width: 800px; background-color: #ffffff; border-radius: 12px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <!-- Profile Picture -->
    <div class="text-center mb-4">
        <img src="@Model.ProfilePic" alt="Profile Picture" class="profile-pic rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #388e3c;" />
    </div>

    <!-- Freelancer Name -->
    <div class="text-center mb-4">
        <h2 class="text-dark-green fw-bold">@Model.Name</h2>
        <p class="text-muted">@Model.Description</p>
    </div>

    <hr class="section-divider" />

    <!-- Languages -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Languages</h5>
        <p class="text-dark">@Model.Language (@Model.LanguageLevel)</p>
    </div>

    <hr class="section-divider" />

    <!-- Skills -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Skills</h5>
        <div class="d-flex flex-wrap gap-2">
            @foreach (var skill in Model.skills)
            {
                <span class="badge skill-badge">@skill.skill_name</span>
            }
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Portfolio and Contact -->
    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Portfolio</h5>
        <p class="text-dark">
            @if (!string.IsNullOrEmpty(Model.PortfolioLink))
            {
                <a href="@Model.PortfolioLink" target="_blank" class="text-success" style="text-decoration: none;">View Portfolio</a>
            }
            else
            {
                <span class="text-muted">No portfolio link provided.</span>
            }
        </p>
    </div>

    <div class="mb-4">
        <h5 class="text-dark-green fw-bold">Contact</h5>
        <p class="text-dark">@Model.Phone</p>
    </div>

    <div class="text-center">
        <button class="btn btn-apply w-50" onclick="location.href='/freelancer/UpdateProfile';">Update Profile</button>
    </div>
</div>

<style>
    /* General Styling */
    body {
        background-color: #f7f8fa;
        font-family: 'Arial', sans-serif;
    }

    .freelancer-profile {
        padding: 20px;
    }

    .section-divider {
        border: none;
        height: 1px;
        background-color: #e0e0e0;
        margin: 20px 0;
    }

    /* Typography */
    .text-dark-green {
        color: #1e5631;
    }

    .fw-bold {
        font-weight: bold;
    }

    /* Skills Badges */
    .skill-badge {
        background-color: #F5F5F5;
        color: #3b6c3b;
        font-size: 0.85rem;
        padding: 0.3rem 0.6rem;
        border-radius: 20px;
        font-weight: 500;
    }

    /* Profile Picture */
    .profile-pic {
        border: 3px solid #388e3c;
    }

    /* Apply Button */
    .btn-apply {
        background-color: green;
        color: white;
        padding: 0.7rem 1.5rem;
        font-size: 1rem;
        border: none;
        border-radius: 25px;
        transition: all 0.3s ease-in-out;
    }

    .btn-apply:hover {
        background-color: #1dbf73;
        transform: scale(1.05);
    }
</style>
