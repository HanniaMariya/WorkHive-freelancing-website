@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freelancer Website</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #1dbf73;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-size: 1.1rem;
        }

        .navbar-nav .nav-link:hover {
            background-color: #0f7f59;
            border-radius: 5px;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
        }

        .nav-buttons .btn {
            margin-left: 15px;
        }

        
        .hero {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 10px;
            background-color: #f8f9fa;
            text-align: center;
        }

        .hero-image {
            width: 100%;
            max-width: 1000px; /* Limit the width of the image */
            height: auto; /* Ensure the aspect ratio is maintained */
            max-height: 500px; /* Limit the height to make it shorter */
            margin-bottom: 20px;
            object-fit: cover;
            border-radius: 10px;
        }


        /* Search Bar Over the Image */
        .search-bar {
            position: absolute;
            top: 60%;
            /* transform: translateY(-10%); */
            display: flex;
            justify-content: center;
            width: 80%;
            z-index: 10;
        }

            .search-bar input{
                width: 50%; 
                padding: 10px;
                border-radius: 3px;
                border: 2px solid #ccc;
                font-size: 1rem;
            }

        .search-bar button {
            padding: 10px 20px;
            background-color: #1dbf73;
            color: white;
            border: none;
            border-radius: 3px;
            font-size: 1rem;
            margin-left: 10px;
        }

        .search-bar button:hover {
            background-color: #0f7f59;
        }

        .description {
        background-color: #f8f9fa;
        padding: 40px 20px;
        text-align: center;
    }

    .description-heading {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
    }

    .description-content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 30px;
    }

    .description-item {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 30%;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .description-subheading {
        font-size: 1.5rem;
        color: #1dbf73;
        margin-bottom: 15px;
    }

    .description-text {
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
    }
        /* Service Card Icon Style */
        .service-icon {  
            font-size: 3rem;
            color: #1dbf73;
            margin-bottom: 15px;
        }

        /* Services Section */
        .services {
            
            padding: 40px 20px;
            background: #fff;
            text-align: center;
        }
        .services-heading 
        {
            font-weight:bold;
        }

            .services h2 {
                margin-bottom: 20px;
            }

        .service-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            width: 250px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }

            .card:hover {
                transform: translateY(-5px); 
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); 
            }

            .card h3 {
                margin-top: 10px;
                font-size: 1.4rem;
            }

            .card p {
                font-size: 1rem;
                color: #555;
            }

        /* Footer */
        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
            margin-top: 20px;
        }

       

    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand" href="#">WorkHive</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Find Work</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Hire Freelancers</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Services
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Web Development</a>
                        <a class="dropdown-item" href="#">Graphic Design</a>
                        <a class="dropdown-item" href="#">Content Writing</a>
                        <a class="dropdown-item" href="#">Digital Marketing</a>
                    </div>
                </li>
            </ul>

            <div class="ml-auto nav-buttons">
               
                <button class="btn btn-success" onclick="location.href='freelancer/createFreelancer';">Join as Freelancer</button>
                <button class="btn btn-primary" onclick="location.href='home/postJob';">Post a Job</button>
                <button class="btn btn-outline-success" onclick="location.href='user/login';">Login</button>
                <button class="btn btn-outline-success" onclick="location.href='user/register';">Sign Up</button>
            </div>
        </div>
    </nav>


    <!-- Image Section -->
    <section class="hero">
        <img src="~/images/a-person-working-from-home-on-a-laptop-in-a-cozy-vibrant-space-filled-with-plants-books-and-colorful-decor-creating-a-warm-and-productive-atmosphere-free-photo.jpg" alt="Freelancer Services" class="hero-image">
        
        <!-- Search Bar over the image -->
        <div class="search-bar">
            <form method="get" action="/Freelancer/SearchFreelancers">
                <input type="text" name="searchQuery" placeholder="Search for services..." aria-label="Search Services" />
                <button type="submit">Search</button>
            </form>
        </div>

    </section>


    <!---description--->
    <section class="description">
        <div class="container">
            <h2 class="description-heading">Why WorkHive?</h2>
            <div class="description-content">
                <div class="description-item">
                    <h3 class="description-subheading">For Clients</h3>
                    <p class="description-text">Easily find talented freelancers for all your business needs. WorkHive connects you with top experts, ensuring your projects are completed on time and to the highest standards.</p>
                </div>
                <div class="description-item">
                    <h3 class="description-subheading">For Freelancers</h3>
                    <p class="description-text">Showcase your skills and find amazing freelance opportunities. With a user-friendly platform and direct access to clients, you can easily manage your projects and grow your career.</p>
                </div>
                <div class="description-item">
                    <h3 class="description-subheading">How We Help</h3>
                    <p class="description-text">WorkHive makes it simple for both clients and freelancers to connect. With a seamless job posting and application process, you'll experience a hassle-free environment designed to foster collaboration and ensure success.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Section -->
    <section class="services">
        <div class="container">
            <h2 class="services-heading">Explore Services Available</h2>
            <div class="service-cards">
                <div class="card">
                    <i class="fas fa-laptop-code service-icon"></i>
                    <h3>Web Development</h3>
                    <p>Create stunning websites tailored to your needs.</p>
                </div>
                <div class="card">
                    <i class="fas fa-paint-brush service-icon"></i>
                    <h3>Graphic Design</h3>
                    <p>Eye-catching designs for your brand.</p>
                </div>
                <div class="card">
                    <i class="fas fa-pencil-alt service-icon"></i>
                    <h3>Content Writing</h3>
                    <p>Engaging and SEO-optimized content.</p>
                </div>
                <div class="card">
                    <i class="fas fa-bullhorn service-icon"></i>
                    <h3>Digital Marketing</h3>
                    <p>Boost your online presence effectively.</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 WorkHive. All rights reserved.</p>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
