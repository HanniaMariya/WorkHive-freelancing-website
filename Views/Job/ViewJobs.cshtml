    }

    /* Jobs Section */
    .jobs-list-section {
        background-color: #f8f9fa;
        padding: 10px;
       /*  border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); */
    }

    .jobs-list-section h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-control-lg,
    .form-select-lg {
        font-size: 1.1rem;
        padding: 10px;
    }

    /* Spacing and Alignment */
    .g-3 {
        gap: 1.5rem;
    }

    .py-5 {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

    /* Responsiveness */
   
</style>
