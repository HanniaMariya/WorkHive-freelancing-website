@model IEnumerable<WorkHive.Models.Freelancer>

<div class="container mt-5">
    <div class="row">
        @foreach (var freelancer in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="freelancer-card shadow-sm">
                    <div class="card-header">
                        <img src="@freelancer.ProfilePic" alt="@freelancer.Name" class="profile-pic" />
                    </div>
                    <div class="card-body">
                        <h3 class="freelancer-name">@freelancer.Name</h3>
                        <p class="description">
                            @if (!string.IsNullOrEmpty(freelancer.Description) && freelancer.Description.Length > 100)
                            {
                                @($"{freelancer.Description.Substring(0, 100)}...")
                            }
                            else
                            {
                                @freelancer.Description
                            }
                        </p>
                        <p class="language">
                            <strong>Language:</strong> @freelancer.Language
                            <span class="language-level">(@freelancer.LanguageLevel)</span>
                        </p>
                        <a href="@freelancer.PortfolioLink" class="portfolio-link" target="_blank">View Portfolio</a>
                    </div>
                    <div class="card-footer">
                        <p class="skills-title">Skills:</p>
                        <div class="skills">
                            @foreach (var skill in freelancer.skills)
                            {
                                <span class="skill">@skill.skill_name</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .freelancer-card {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .freelancer-card:hover {
        transform: scale(1.03);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        text-align: center;
        padding: 15px;
        background-color: #f0f0f0;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ddd;
    }

    .card-body {
        padding: 15px;
    }

    .freelancer-name {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .description {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
    }

    .language {
        font-size: 14px;
        color: #555;
    }

    .language-level {
        font-style: italic;
        color: #888;
    }

    .portfolio-link {
        display: inline-block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
    }

    .portfolio-link:hover {
        text-decoration: underline;
    }

    .card-footer {
        padding: 10px 15px;
        background-color: #f8f8f8;
        border-top: 1px solid #ddd;
    }

    .skills-title {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .skills {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
    }

    .skill {
        background-color: #e8f5e9;
        color: #388e3c;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 12px;
    }
</style>
