@model List<WorkHive.Models.Freelancer>
@{
    Layout = "_Layout";
    ViewBag.Title = "Search Freelancers";
}

<div class="search-container">
    <h1>Search Freelancers by Skill</h1>
    <form method="get" action="/Freelancer/SearchFreelancers">
        <input type="text" name="searchQuery" placeholder="Enter skill name..." class="search-input" />
        <button type="submit" class="search-button">Search</button>
    </form>

    @if (Model.Any())
    {
        <div class="freelancer-cards">
            @foreach (var freelancer in Model)
            {
                <div class="freelancer-card">
                    <div class="freelancer-card-header">
                        <h3>@freelancer.Name</h3>
                    </div>
                    <div class="freelancer-card-body">
                        <p><strong>Profile Picture:</strong> <img src="@freelancer.ProfilePic" alt="@freelancer.Name" class="profile-pic" /></p>
                        <p><strong>Phone:</strong> @freelancer.Phone</p>
                        <p><strong>Portfolio:</strong> <a href="@freelancer.PortfolioLink" target="_blank">@freelancer.PortfolioLink</a></p>
                    </div>
                    <div class="freelancer-card-footer">
                        <button class="contact-btn">Contact</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No freelancers found with this skill.</p>
    }
</div>

<style>
    .search-container {
        text-align: center;
        margin: 50px auto;
        width: 100%;
        max-width: 600px;
    }

    .search-input {
        padding: 10px;
        width: 80%;
        margin-right: 10px;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ddd;
    }

    .search-button {
        padding: 10px 20px;
        background-color: #1dbf73;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
        font-size: 1rem;
    }

        .search-button:hover {
            background-color: #0f7f59;
        }

    .freelancer-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .freelancer-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .freelancer-card-header {
        font-size: 1.2rem;
        margin-bottom: 15px;
    }

    .profile-pic {
        max-width: 100px;
        max-height: 100px;
        border-radius: 50%;
    }

    .freelancer-card-body {
        font-size: 0.9rem;
        color: #555;
    }

    .freelancer-card-footer {
        margin-top: 15px;
    }

    .contact-btn {
        padding: 10px 15px;
        background-color: #1dbf73;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
    }

        .contact-btn:hover {
            background-color: #0f7f59;
        }
</style>
